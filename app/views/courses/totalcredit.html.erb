<div class="container-fluid">
  <div class="row">

    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10" style="padding-right: 50px">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <% if teacher_logged_in? %><h3 class="panel-title">授课列表</h3>
          <% end %>
          <% if student_logged_in? %>
              <h3 class="panel-title">总学分统计</h3>    <!--  xzh -->
          <% end %>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>

            <tr style="font-size:16px;" >
              <th>类别</th>
              <th>课程名称</th>
              <th>要求学分</th>
              <th>已选学分</th>
              <th>还需学分</th>
            </tr>
            </thead>
          
            <tbody style="font-size:16px;" >

            <% count = 0 %>      
            <% @course.each do |course| %>
                 <% count += 1 %> 
            <% end %>
             
              <!--  xzh -->

            <% tmp = 0 %>  
            <% tmp1 = "" %>
            <% totalcredit = 0.0%>
            <tr>   
                <td>已选全部课程</td>
                <% @course.each do |course| %>
                    <% tmp += 1 %>
                    <% totalcredit += course.credit[-3..-1].to_f %>
                    <% tmp1 = tmp1 + course.name + "、" %>
                    <% if tmp == 2 %>
                        <% tmp1 = tmp1[0..-2]%>
                        <% tmp1 = tmp1 + "等"%>
                        <td><%= tmp1%></td>
                    <% else %>
                    <% next %>
                    <% end %>
                <% end %>
                <% if tmp == 0 %>
                    <td>无</td>
                <% end %>
                <% if tmp == 1 %>
                    <% tmp1 = tmp1[0..-2]%>
                    <td><%= tmp1%></td>
                <% end %>
                <td>30</td>
                <td><%= totalcredit %></td>
                <td><%= 30 - totalcredit %></td>
            </tr>

            <% tmp = 0 %>  
            <% tmp1 = "" %>
            <% degreecredit = 0.0%>
            <tr> 
               <td>已选学位课</td>
                <% @course.each do |course| %>
                  
                  
                     
                         <% tmp += 1 %>
                         <% degreecredit += course.credit[-3..-1].to_f %>
                         <% tmp1 = tmp1 + course.name + "、" %>
                         <% if tmp == 2 %>
                            <% tmp1 = tmp1[0..-2]%>
                            <% tmp1 = tmp1 + "等"%>
                            <td><%= tmp1%></td>
                         <% end %>
                     
                  
                  
                <% end %>
                <% if tmp == 0 %>
                    <td>无</td>
                <% end %>
                <% if tmp == 1 %>
                    <% tmp1 = tmp1[0..-2]%>
                    <td><%= tmp1%></td>
                <% end %>
                <td>12</td>
                <td><%= degreecredit %></td>
                <td><%= 12 - degreecredit %></td>
            </tr>




<!-- 
